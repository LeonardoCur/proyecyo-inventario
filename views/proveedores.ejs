<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Proveedores</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/resources/css/style.css">

</head>
<body>
    <%- include('partials/header') %>
    <main>
        <div class="container">
            <h1>Gestión de Proveedores</h1>
            
            <!-- Botón para mostrar el formulario -->
            <div class="titulo_boton">

                <h2>Lista de Proveedores</h2>
                <button class="show-form-button" id="showFormButton">Agregar Nuevo Proveedor</button>
                </div>
            
            <!-- Formulario para agregar un nuevo proveedor -->
            <form class="form_colapsable" id="newProviderForm" action="/proveedores/agregar" method="POST">
                <label for="nombre">Nombre del proveedor:</label>
                <input type="text" id="nombre" name="nombre" required>
                
                <label for="telefono">Teléfono:</label>
                <input type="text" id="telefono" name="telefono" required>
                
                <label for="web">Sitio Web:</label>
                <input type="text" id="web" name="web">
                
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email">
                
                <button type="submit" class="save-button">Guardar Proveedor</button>
            </form>
            
            <!-- Lista de proveedores -->
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Web</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% proveedores.forEach(proveedor => { %>
                        <tr>
                            <td><%= proveedor.id %></td>
                            <td><%= proveedor.nombre %></td>
                            <td><%= proveedor.telefono %></td>
                            <td><%= proveedor.web %></td>
                            <td><%= proveedor.email %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Script para mostrar y ocultar el formulario -->
        <script>
            const showFormButton = document.getElementById('showFormButton');
            const newProviderForm = document.getElementById('newProviderForm');

            showFormButton.addEventListener('click', () => {
                if (newProviderForm.style.display === 'none' || newProviderForm.style.display === '') {
                    newProviderForm.style.display = 'block';
                    showFormButton.textContent = 'Ocultar Formulario';
                } else {
                    newProviderForm.style.display = 'none';
                    showFormButton.textContent = 'Agregar Nuevo Proveedor';
                }
            });
        </script>
     </main>

         <%- include('partials/footer') %>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>    
</body>
</html>
