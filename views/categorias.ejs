<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Categorías</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/resources/css/style.css">

</head>
<body>
    <%- include('partials/header') %>
    <main>  
            <div class="container">
                <h1>Gestión de Categorías</h1>
                
                <!-- Botón para mostrar el formulario -->
                <div class="titulo_boton">
                    <h2>Lista de Categorías</h2>
                    <button class="show-form-button" id="showFormButton">Agregar Nueva Categoría</button>
                    
                    </div>

                <!-- Formulario para agregar una nueva categoría -->
                <form class="form_colapsable" id="newCategoryForm" action="/categorias/agregar" method="POST">
                    <label for="nombre">Nombre de la Categoría:</label>
                    <input type="text" id="nombre" name="nombre" required>

                    <button type="submit" class="save-button">Guardar Categoría</button>
                </form>

                <!-- Lista de categorías -->
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categorias.forEach(categoria => { %>
                            <tr>
                                <td><%= categoria.id %></td>
                                <td><%= categoria.nombre %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Script para mostrar y ocultar el formulario -->
            <script>
                const showFormButton = document.getElementById('showFormButton');
                const newCategoryForm = document.getElementById('newCategoryForm');

                showFormButton.addEventListener('click', () => {
                    if (newCategoryForm.style.display === 'none' || newCategoryForm.style.display === '') {
                        newCategoryForm.style.display = 'block';
                        showFormButton.textContent = 'Ocultar Formulario';
                    } else {
                        newCategoryForm.style.display = 'none';
                        showFormButton.textContent = 'Agregar Nueva Categoría';
                    }
                });
            </script>
    </main>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>        
</body>
</html>
